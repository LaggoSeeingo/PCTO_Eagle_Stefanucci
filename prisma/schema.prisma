datasource db {
  provider = "postgresql" // o il tipo di DB che stai usando
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Dati {
  id            Int     @id @default(autoincrement())
  ram_total     String
  ram_free      String
  ram_used      String
  ram_usage     String
  cpu_usage     String
  disk_total    String
  disk_free     String
  disk_used     String
  disk_usage    String
  ram_stressed  Boolean @default(false) 
  cpu_stressed  Boolean @default(false) 
  disk_stressed Boolean @default(false)
}
